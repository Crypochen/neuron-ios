  pod 'SDWebImage'
  pod 'IQKeyboardManagerSwift'
  pod 'EFQRCode'
  pod 'RSKPlaceholderTextView', "~> 4.0.0"
  pod 'Toast-Swift', "~> 4.0.0"
  pod 'RealmSwift'
  pod 'MBProgressHUD'
  pod 'TrustCore', '~> 0.0.7'
  pod 'TrustKeystore', '~> 0.4.1'
  pod 'KeychainSwift'
  pod 'IGIdenticon', git: "https://github.com/cryptape/IGIdenticon.git", branch: "swift4.2"
  pod 'SCLAlertView'
  pod 'Alamofire'
  pod 'Alamofire-Synchronous'

  target 'NeuronTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'NeuronUITests' do
    inherit! :search_paths
    # Pods for testing
  end
end
